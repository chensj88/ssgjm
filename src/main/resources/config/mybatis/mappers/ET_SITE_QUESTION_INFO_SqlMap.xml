    <select id="selectMobileEtSiteQuestionInfo" resultMap="etSiteQuestionInfoResult" parameterType="etSiteQuestionInfo">
        SELECT
            t.ID,d.DEPT_NAME,t.QUESTION_DESC,t.CREATE_TIME,tt.NUM
        FROM
