    <select id="selectEtSiteQuestionInfo" resultMap="etSiteQuestionInfoResult" parameterType="etSiteQuestionInfo">
        select *,d.DICT_LABEL,i.YHMC as create_name,ii.YHMC as allocate_name from ET_SITE_QUESTION_INFO t
        LEFT JOIN SYS_DICT_INFO d ON t.QUESTION_TYPE=d.DICT_VALUE AND d.DICT_CODE='questionType'
        LEFT JOIN SYS_USER_INFO i ON t.CREATOR=i.ID
        LEFT JOIN SYS_USER_INFO ii ON t.ALLOCATE_USER=ii.ID
        where 1 = 1
        <include refid="sf-etSiteQuestionInfo"/>
    </select>

    <select id="selectEtSiteQuestionInfoList" resultMap="etSiteQuestionInfoResult"
            parameterType="etSiteQuestionInfo">
        select
        <if test="row.count != null and row.count != ''">top ${row.count}</if>
        *,i.YHMC as create_name,ii.YHMC as allocate_name from ET_SITE_QUESTION_INFO t
        LEFT JOIN SYS_USER_INFO i ON t.CREATOR=i.ID
        LEFT JOIN SYS_USER_INFO ii ON t.ALLOCATE_USER=ii.ID
        where 1 = 1
        <include refid="sf-etSiteQuestionInfo"/>
        <!-- order by ID asc -->
    </select>

    <select id="selectEtSiteQuestionInfoCount" resultType="int" parameterType="etSiteQuestionInfo">
        select count(*) from ET_SITE_QUESTION_INFO t where 1 = 1
        <include refid="sf-etSiteQuestionInfo"/>
    </select>

    <select id="selectEtSiteQuestionInfoPaginatedList" resultMap="etSiteQuestionInfoResult"
            parameterType="etSiteQuestionInfo">
        select * from (
        select *, ROW_NUMBER() OVER ( order by ID desc ) as _rn
        from ET_SITE_QUESTION_INFO t where 1 = 1
        <include refid="sf-etSiteQuestionInfo"/>
        <!-- order by ID asc -->
        ) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
    </select>


