        <!-- 配置需要拦截处理的请求-->
        <property name="filterChainDefinitions">
            <value>
                /login/** = anon
                /resources/** = anon
                /admin/** = authc
                /vue/** = anon
                /mobile/** = anon
                /logout=logout
                /** = authc
